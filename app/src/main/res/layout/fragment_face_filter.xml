<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FaceFilterFragment">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <HorizontalScrollView

            android:layout_centerInParent="true"
            android:id="@+id/horizontal_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10sp"
                android:visibility="gone"
                android:id="@+id/linearLayout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/brkovi1"
                    android:text="@string/brkovi"
                    android:background="@color/color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:text="@string/Srca"
                    android:background="@color/color_blue"
                    android:id="@+id/brkovi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:background="@color/color_blue"
                    android:text="@string/kvadrat"
                    android:id="@+id/brkovi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="10sp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_from_gallery_button"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:visibility="visible"
            android:text="Choose photo from your gallery"
            android:background="@color/color_blue">
        </Button>
        <TextView
            android:visibility="gone"
            android:textColor="@color/blue_dark"
            android:textSize="16sp"
            android:text="@string/no_photo"
            android:layout_centerHorizontal="true"
            android:id="@+id/info_from_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/slika"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
        </ImageView>
        <com.example.vestackainteligencija1.Helper.GraphicOverlay
            android:id="@+id/graphic_overlay"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.example.vestackainteligencija1.Helper.GraphicOverlay>
    </RelativeLayout>
</LinearLayout>